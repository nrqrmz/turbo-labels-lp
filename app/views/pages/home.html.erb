<div class="container my-4">
  <div class="row d-flex justify-content-center">
    <div  class="col-8 bg-white p-4 shadow"
          data-controller="ticket"
          data-ticket-current-user-id-value="<%= current_user.id %>" >

      <ul class="list-unstyled">
        <% @items.each do |item| %>
          <%= turbo_stream_from "item_#{item.id}" %>
          <li id="item_<%= item.id %>"
              class="d-flex justify-content-end mb-3">
            <%= render 'items/item', item: item %>
          </li>
        <% end %>
      </ul>

    </div>
  </div>
</div>

<%# console %>
