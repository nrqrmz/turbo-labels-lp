<div class="container my-4">
  <div class="row d-flex justify-content-center">
    <div  class="col-8 bg-white p-4 shadow"
          data-controller="ticket"
          data-ticket-current-user-id-value="<%= current_user.id %>" >

      <ul class="list-unstyled">
        <% @items.each do |item| %>
          <li class="d-flex justify-content-end mb-3">
            <% button_class = item.consumers.empty? ? 'btn-outline-primary' : 'btn-primary' %>
            <label class="btn <%= button_class %> rounded-pill">
              <input  type="checkbox"
                      value="<%= item.id %>"
                      data-action="change->ticket#itemTag"
                      data-quantity="<%= item.consumers.size %>"
                      <%= 'disabled' if item.price > 200 %>>
              <%= item.price %>
            </label>
          </li>
        <% end %>
      </ul>

    </div>
  </div>
</div>

<% console %>
